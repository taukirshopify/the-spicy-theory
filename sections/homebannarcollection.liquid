<script
  src="    https://cdn.jsdelivr.net/npm/wowjs@1.1.3/dist/wow.min.js"
></script>
<link
  href="    https://cdn.jsdelivr.net/npm/wowjs@1.1.3/css/libs/animate.min.css"
  rel="stylesheet"
>

<div class="custome-bannar">
  <div class="innerwrapper">
    <div class="container">
      <div class="inner-banner ">
        <h2>{{ section.settings.h2 }}</h2>
        <img
          class="wow slideInRight"
          data-wow-offset="3"
          data-wow-iteration="1"
          data-wow-duration="2s"
          data-wow-delay="1s"
          src="{{ section.settings.img |img_url:'500x' }}"
          alt=""
        >
      </div>
    </div>
  </div>
  <div class="svg-wrapper">
    <img src="{{ section.settings.bottom-sheap | img_url:'' }}" alt="">
  </div>
</div>
<script>
  var wow = new WOW({
    boxClass: 'wow', // animated element css class (default is wow)
    animateClass: 'animated', // animation css class (default is animated)
    offset: 20, // distance to the element when triggering the animation (default is 0)
    mobile: true, // trigger animations on mobile devices (default is true)
    live: true, // act on asynchronously loaded content (default is true)
    callback: function (box) {
      // the callback is fired every time an animation is started
      // the argument that is passed in is the DOM node being animated
    },
    scrollContainer: null, // optional scroll container selector, otherwise use window
  });
  wow.init();
</script>
{% schema %}
{
  "name": "Collection bannar",
  "class": "home banner",
  "settings": [
    {
      "type": "text",
      "id": "h2",
      "label": "Put your title",
      "default": "SMALL BATCH,<br> HANDCRAFTED SPICE BLENDS"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Select your bannar Image"
    },
    {
      "type": "image_picker",
      "id": "bottom-sheap",
      "label": "Select you section bottom sheap"
    }
  ],
  "presets": [
    {
      "name": "collection Banner"
    }
  ]
}
{% endschema %}

<style>
  .innerwrapper {
    background: #efefed;
  }
  .inner-banner {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .inner-banner h2 {
    margin-right: 50px;
  }
  @media screen and (max-width: 600px) {
    .inner-banner h2 {
      display: none;
    }
  }
</style>
